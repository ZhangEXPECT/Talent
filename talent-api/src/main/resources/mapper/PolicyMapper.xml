    <!-- Id查询 -->
    <select id="queryById" parameterType="int" resultMap="policyMap">
        select *
        from tb_policy p
        where p.policyId = #{policyId}
    </select>



    <!-- 动态模糊查询 -->
    <sql id="selectActive">
        <where>
            <if test="policyId != null">
                p.policyId = #{policyId}
            </if>
            <if test="keywords != null">
                and (p.title like
                concat('%',#{keywords},'%')
                or p.content  like
                concat('%',#{keywords},'%'))
            </if>
            <if test="startTime != null and endTime != null">
                and p.releaseTime between #{startTime} and #{endTime}
            </if>
       </where>
    </sql>

    <!-- Time范围查询 -->
    <select id="queryByTime" parameterType="int" resultMap="policyMap">
        select *
        from tb_policy p
        where p.releaseTime between #{startTime} and #{endTime}
    </select>


    <!-- 分页 -->
    <select id="queryBySelectActive" resultMap="policyMap">
        select * from tb_policy p
        <!-- 查询条件 -->
        <include refid="selectActive"/>
        <!-- 分页-->
        <if test="currentPage != null and pageSize != null">
            <bind name="start" value="(currentPage - 1) * pageSize"/>
            limit #{start},#{pageSize}
        </if>
    </select>


    <select id="countBySelectActive" resultType="int">
        select count(1)
        from tb_policy p
        <include refid="selectActive"></include>
    </select>

</mapper>