<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.talent.dao.PolicyDao">
    <resultMap id="policyMap" type="Policy">
        <id property="policyId" column="policyId"></id>
        <result property="title" column="title"></result>
        <result property="content" column="content"></result>
        <result property="releaseTime" column="releaseTime"></result>
        <result property="img1" column="img1"></result>
        <result property="img2" column="img2"></result>
        <result property="img3" column="img3"></result>
    </resultMap>

    <!-- 添加 -->
    <insert id="add" parameterType="Policy">
        insert into tb_policy
        values (#{policyId}, #{title}, #{content}, #{releaseTime},#{img1},#{img2},#{img3})
        <selectKey keyProperty="policyId" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID() AS policyId
        </selectKey>
    </insert>


    <!-- 删除 -->
    <delete id="delete" parameterType="int">
        delete
        from tb_policy
        where policyId = #{policyId}
    </delete>

